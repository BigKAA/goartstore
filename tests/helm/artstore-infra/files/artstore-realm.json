        "composite": true,
        "clientRole": false,
        "composites": {
          "realm": [
            "offline_access"
          ],
          "client": {
            "account": [
              "view-profile",
              "manage-account"
            ]
          }
        }
      },
      {
        "name": "offline_access",
        "description": "${role_offline-access}",
        "composite": false,
        "clientRole": false
      },
      {
        "name": "uma_authorization",
        "description": "${role_uma_authorization}",
        "composite": false,
        "clientRole": false
